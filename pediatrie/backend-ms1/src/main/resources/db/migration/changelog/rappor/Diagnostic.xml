<!-- db/changelog-1.1-container.xml -->

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

  <!-- Create Container Table -->
    <changeSet id="1" author="your-name">
    <createTable tableName="diagnostic">
      <column name="id" type="BIGINT">
        <constraints primaryKey="true" nullable="false"/>
      </column>
        <column name="ref" type="VARCHAR(500)"/>
        <column name="date_diagnostic" type="TIMESTAMP"/>
        <column name="description" type="VARCHAR(500)"/>

        <column name="consultation_id" type="BIGINT">
          <constraints nullable="false"/>
        </column>

    </createTable>
  </changeSet>

    <!-- Add foreign key constraint -->
  <changeSet id="2" author="your-name">
      <addForeignKeyConstraint
              baseTableName="diagnostic"
              baseColumnNames="consultation_id"
              referencedTableName="consultation"
              referencedColumnNames="id"
              constraintName="fk_diagnostic_consultation"/>

  </changeSet>

    <!-- Create Sequence for ContainerType -->
  <changeSet id="3" author="your-name">
    <createSequence sequenceName="diagnostic_seq" startValue="1" incrementBy="1"/>
  </changeSet>

  <!-- Load Data from CSV -->
  <changeSet id="4" author="your-name">
    <loadData
            file="classpath:/db/migration/data/rappor/Diagnostic.csv"
            tableName="diagnostic">
      <column name="id" type="NUMERIC"/>
          <column name="ref" type="STRING"/>
          <column name="date_diagnostic" type="TIMESTAMP"/>
          <column name="description" type="STRING"/>
        <column name="consultation" type="BIGINT"/>
    </loadData>
  </changeSet>


</databaseChangeLog>
